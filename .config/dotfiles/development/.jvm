case $(uname -s) in
    Linux)
        if [ -r "/usr/bin/javac" ]; then
            export JAVA_HOME=$(dirname $(dirname $(readlink -e /usr/bin/javac)))
            export JDK_HOME=$(dirname $(dirname $(readlink -e /usr/bin/javac)))
        fi
    ;;
    Darwin)
        export JAVA_HOME="$(/usr/libexec/java_home)"
        export JDK_HOME="$(/usr/libexec/java_home)"
    ;;
    *)
        echo 'Not exporting JAVA_HOME | JDK_HOME'
    ;;
esac
