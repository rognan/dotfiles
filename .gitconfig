[include]
    path = ~/.gitconfig-user

[core]
    editor = vim -c \"set fileencodings=utf-8,latin1,ucs-bom\"
    quotepath = false
    precomposeunicode = false
    excludesfile = ~/.gitignore
    autocrlf = input

[commit]
    template = ~/.gitmessage

[push]
    default = upstream

[merge]
    tool = opendiff
    log = true

[rerere]
    enabled = true

[color]
    ui = always

[color "diff"]
    meta = yellow bold
    commit = green bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = "red bold 52"
    newNormal = "green bold"
    newHighlight = "green bold 22"

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "status"]
    added = green bold
    changed = red bold
    untracked = cyan bold

[alias]
    s = status -sb

    # List files ignored by git
    ls-ignored = ls-files -o -i --exclude-standard

    # Copy a commit with the message "Cherry picked from ...".
    cp = cherry-pick -x

    unstage = reset HEAD
    uncommit  = reset --soft HEAD^

    # Short readable log format with relative time.
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit

    # Short(er)s readable log format without relative time.
    flog = log --graph --topo-order --decorate --oneline --first-parent

    # Count number of commits per participant.
    count = shortlog -sn

    ls = ls-files
    steps = log --oneline --reverse

[hub]
    protocol = https

[credential]
    #helper = osxkeychain
	  helper = cache --timeout=3600
